@model LadyFirstShop.Data.ViewModel.ProductViewModel
@{
    ViewData["Title"] = "CreateProductColor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 3000);
    </script>
    <script src="/js/admin.js"></script>
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">THÊM MÀU SON</div>
                        @if (ViewBag.SuccessMsg != null)
                        {
                            <div id="msgAlert" class="alert alert-success" role="alert">
                                @ViewBag.SuccessMsg
                            </div>
                        }
                        <div class="card-body">
                            <input id="productId" value="@Model.Id" type="hidden" />
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="cc-payment" class="control-label mb-1">Tên sản phẩm</label>
                                    <input value="@Model.Name" type="text" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <div class="table-responsive table--no-card m-b-30">
                                        <table class="table table-borderless table-striped table-earning">
                                            <thead>
                                                <tr>
                                                    <th>Ảnh</th>
                                                    <th>Màu</th>
                                                    <th>Số lượng</th>
                                                    <th>Xóa</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.ProductColors)
                                                {
                                                    <tr>
                                                        <td width="100">
                                                            <img src="/product-image/@item.Image" />
                                                        </td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Quantity</td>
                                                        <td>
                                                            <button name="colorId" data-id="@item.Id" id="deleteColor" class="btn btn-danger btn-sm deleteColor">Xóa</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                </div>
                            </div>
                            <form asp-action="Create" enctype="multipart/form-data" method="post" novalidate="novalidate">
                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label for="cc-payment" class="control-label mb-1">Màu son</label>
                                        <input asp-for="Name" id="cc-pament" name="name" type="text" class="form-control" aria-required="true" aria-invalid="false">
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <input typeof="hidden" style="margin-top:10px;" /><br />
                                        @Html.ValidationMessageFor(m => m.Name,"", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label for="cc-payment" class="control-label mb-1">Số lượng</label>
                                        <input asp-for="Quantity" name="quantity" type="text" class="form-control" aria-required="true" aria-invalid="false">
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <input typeof="hidden" style="margin-top:10px;" /><br />
                                        @Html.ValidationMessageFor(m => m.Quantity,"", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <input type="file" id="file-input" asp-for="Image" name="image" class="form-control-file">
                                    </div>
                                    <div class="form-group col-lg-6">
                                        @Html.ValidationMessageFor(m => m.Image,"", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-3">
                                        <button id="payment-button" type="submit" class="btn btn-lg btn-success btn-block" style="margin-top:9px;">
                                            <i class="fa fa-save"></i>
                                            <span id="payment-button-amount">Lưu</span>
                                        </button>
                                    </div>
                                    <div class="form-group col-lg-3">
                                        <a href="/Admin/Product" type="button" id="payment-button" class="btn btn-lg btn-secondary btn-block" style="margin-top:9px;">
                                            <span id="payment-button-amount">Quay lại</span>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>