@model LadyFirstShop.Data.ViewModel.ContactViewModel
@{
    ViewData["Title"] = "Chi tết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">KHÁCH HÀNG PHẢN HỒI</div>
                        <div class="card-body">
                            <input type="hidden" id="orderId" value="@Model.Id" />
                            <div class="row">
                                <div class="form-group col-lg-12">
                                    <label class="control-label mb-1"><b style="font-size: 14px;">Khách hàng</b>: @Model.Name</label>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label class="control-label mb-1"><b style="font-size: 14px;">Email</b>: @Model.Email</label>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label class="control-label mb-1"><b style="font-size: 14px;">Tiêu đề</b>: @Model.Subject</label>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label class="control-label mb-1"><b style="font-size: 14px;">Nội dung</b>: @Model.Content</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-3">
                                    <a href="/Admin/Contact" type="button" id="payment-button" class="btn btn-lg btn-secondary btn-block" style="margin-top:9px;">
                                        <span id="payment-button-amount">Quay lại</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>